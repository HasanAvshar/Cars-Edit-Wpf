<Window x:Class="WpfApp15.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Window" Height="300" Width="400">
    <Grid>
        <Label Content="Make" FontSize="20" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" />
        <TextBox Width="250" Height="25" HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Text="{Binding Car.Make}" />
        <Label Content="Model" FontSize="20" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" />
        <TextBox Width="250" Height="25" HorizontalAlignment="Left" Margin="100,50,0,0" VerticalAlignment="Top" Text="{Binding Car.Model}" />
        <Label Content="Year" FontSize="20" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" />
        <TextBox Width="250" Height="25" HorizontalAlignment="Left" Margin="100,90,0,0" VerticalAlignment="Top" Text="{Binding Car.Year}" />
        <Label Content="St.Number" FontSize="15" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" />
        <TextBox Width="250" Height="25" HorizontalAlignment="Left" Margin="100,130,0,0" VerticalAlignment="Top" Text="{Binding Car.StNumber}" />

        <Button Content="Save" Width="100" Height="30" HorizontalAlignment="Left" Margin="100,180,0,0" VerticalAlignment="Top" Click="Save_Click" />
    </Grid>
</Window>